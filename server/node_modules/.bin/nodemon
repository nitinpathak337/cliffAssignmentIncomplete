#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

export NODE_PATH="/sheetscount/server/node_modules/.pnpm/nodemon@2.0.20/node_modules/nodemon/bin/nodemon.js/node_modules:/sheetscount/server/node_modules/.pnpm/nodemon@2.0.20/node_modules/nodemon/bin/node_modules:/sheetscount/server/node_modules/.pnpm/nodemon@2.0.20/node_modules/nodemon/node_modules:/sheetscount/server/node_modules/.pnpm/nodemon@2.0.20/node_modules:/sheetscount/server/node_modules/.pnpm/node_modules:/sheetscount/server/node_modules:/sheetscount/node_modules:/node_modules:/sheetscount/server/node_modules/nodemon/bin/nodemon.js/node_modules:/sheetscount/server/node_modules/nodemon/bin/node_modules:/sheetscount/server/node_modules/nodemon/node_modules"
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../nodemon/bin/nodemon.js" "$@"
else 
  exec node  "$basedir/../nodemon/bin/nodemon.js" "$@"
fi
